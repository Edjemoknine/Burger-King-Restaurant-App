// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

model Product {
  id           String   @id @default(uuid()) @map("_id")
  title        String
  description  String
  price        Int[]
  extraOptions Json[]
  images       String[]
}

model Order {
  id       String   @id @default(uuid()) @map("_id")
  customer String
  address  String
  amount   Int
  status   Int
  orders   String[]
}
